<p id="notice"><%= notice %></p>

<a href="/en/books">en</a>|<a href="/ja/books">ja</a>
<h1><%= t('views.books.index.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.book.title') %></th>
      <th><%= t('activerecord.attributes.book.memo') %></th>
      <th><%= t('activerecord.attributes.book.author') %></th>
      <th><%= t('activerecord.attributes.book.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('link.show'), book %></td>
        <td><%= link_to t('link.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('link.destroy'), book, method: :delete, data: { confirm:  t('link.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  t('link.create'), new_book_path %>
