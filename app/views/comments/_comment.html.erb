<h2><%= Comment.model_name.human %></h2>

<% comments.each do |comment| %>
  <div>
    <p><%= comment.comment %></p>
    <p>
      <%= comment.user.name %>
      <span>
        <%= comment.created_at %>
        <%= link_to t('views.common.destroy'), comment_path(comment_id: comment.id), method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
      </span>
    </p>
  </div>
  <br>
<% end %>
