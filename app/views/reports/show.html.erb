<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong><%= Report.human_attribute_name(:title) %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:content) %>:</strong>
  <%= @report.content %>
</p>

<%= link_to t('views.common.edit'), edit_report_path(@report) %> |
<%= link_to t('views.common.back'), reports_path %>

<%= render 'comments/comment', comments: @report.comments %>

<%= form_with url: report_comments_url(report_id: @report.id) do |form| %>
  <%= form.label Comment.human_attribute_name(:comment) %>
  <%= form.text_area :comment, size: "60x4" %>
  <% if flash[:errors] %>
    <% flash[:errors].each do |message| %>
      <p style="color: red"><%= message %></p>
    <% end %>
  <% end %>
  <div>
    <%= form.submit t('comments.comment') %>
  </div>
<% end %>
